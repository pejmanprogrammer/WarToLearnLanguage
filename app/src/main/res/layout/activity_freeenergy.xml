<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorApp"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/pointfree"
        android:layout_weight=".175"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <ImageView

            android:padding="6dp"
            android:src="@drawable/starmessage"
            android:id="@+id/imgfreepoint"
            android:layout_width="75dp"
            android:layout_height="match_parent" />

        <TextView
            android:textColor="#000000"
            android:text="نظر به برنامه"

            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgfreepoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />

        <ImageView
            android:src="@drawable/coin"
            android:id="@+id/imglogoenergy2"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:text="75"
            android:textColor="#081240"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toStartOf="@+id/imglogoenergy2" />




    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/showvidio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".175">


        <ImageView
            android:id="@+id/imgfreetocash"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:padding="6dp"
            android:src="@drawable/seevidio" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imgfreetocash"
            android:text="مشاهده ویدیوی تبلیغاتی"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/imglogoenergy3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/coin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imglogoenergy3"
            android:text="50"
            android:textColor="#081240"
            android:textSize="16sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".3">


    </RelativeLayout>

</LinearLayout>