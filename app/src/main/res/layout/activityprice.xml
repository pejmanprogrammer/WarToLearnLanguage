<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorApp"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorApp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true">


                <TextView
                    android:id="@+id/txtnumberenergy"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/backtextenergy"
                    android:gravity="left"
                    android:onClick="txtnumberenergy"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

                <com.vincan.rotatecircleimageview.RotateCircleImageView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:src="@drawable/coin"
                     />


            </FrameLayout>


        </RelativeLayout>


    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_weight=".2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight=".275"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest1"
                android:padding="6dp"
                android:src="@drawable/chestclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest2"
                android:padding="6dp"
                android:src="@drawable/chestclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest3"
                android:padding="6dp"
                android:src="@drawable/chestclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_weight=".05"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>


    <LinearLayout
        android:layout_weight=".275"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/chestclose" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest5"
                android:padding="6dp"
                android:src="@drawable/chestclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight=".33"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/chest6"
                android:padding="6dp"
                android:src="@drawable/chestclose"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_weight=".2"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

</LinearLayout>