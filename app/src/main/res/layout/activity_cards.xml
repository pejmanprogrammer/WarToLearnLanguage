<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">






    <android.support.v7.widget.Toolbar
        android:background="@color/colorApp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgeye"
                android:padding="3dp"
                android:src="@drawable/eyeopen"
                android:layout_width="50dp"
                android:layout_height="match_parent" />


            <ImageView
                android:padding="3dp"
                android:id="@+id/imgpartlike"
                android:src="@drawable/partlike"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/imgnightpage"
                android:padding="5dp"
                android:layout_toLeftOf="@+id/imgpartlike"
                android:src="@drawable/stylenight"
                android:layout_marginRight="3dp"
                android:layout_width="50dp"
                android:layout_height="match_parent" />



        </RelativeLayout>




    </android.support.v7.widget.Toolbar>


    <LinearLayout

        android:id="@+id/layoutcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".125">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".625"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".125">



            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".75">

                <com.bakerj.infinitecards.InfiniteCardView

                    android:id="@+id/infinitecard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    app:animDuration="1000"
                    app:cardRatio="1.4">


                </com.bakerj.infinitecards.InfiniteCardView>


                <com.github.florent37.materialtextfield.MaterialTextField
                    android:id="@+id/matworld"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:mtf_animationDuration="1000"
                    app:mtf_backgroundColor="#e9e2de"
                    app:mtf_cardCollapsedHeight="4dp"
                    app:mtf_labelColor="#000000"
                    app:mtf_openKeyboardOnFocus="false">


                    <EditText
                        android:id="@+id/edtword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="لغت"
                        android:textSize="18sp"
                        app:mtf_labelColor="#000000" />


                </com.github.florent37.materialtextfield.MaterialTextField>


                <com.github.florent37.materialtextfield.MaterialTextField

                    android:id="@+id/mattrans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/matworld"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:mtf_animationDuration="1000"
                    app:mtf_backgroundColor="#e9e2de"
                    app:mtf_cardCollapsedHeight="4dp"
                    app:mtf_labelColor="#000000"
                    app:mtf_openKeyboardOnFocus="false">

                    <EditText

                        android:id="@+id/edttrans"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ترجمه"
                        android:textSize="18sp"
                        app:mtf_labelColor="#000000" />


                </com.github.florent37.materialtextfield.MaterialTextField>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".125">

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".075"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".125">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/btnpre"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/colorApp"
                    android:text="Pre"
                    android:textColor="#ffffff" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/btnrestart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/colorApp"
                    android:text="Restart"
                    android:textColor="#ffffff" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".25">

                <Button
                    android:id="@+id/btnnext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/colorApp"
                    android:text="Next"
                    android:textColor="#ffffff" />


            </LinearLayout>


            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".125">

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".35"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".125">

                </LinearLayout>




                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <TextView

                        android:id="@+id/txtof"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="کارت"
                        android:textColor="#091db3"
                        android:textSize="30sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".15"
                    android:gravity="center|left">

                    <TextView
                        android:id="@+id/txtallpage"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:gravity="center|left"
                        android:text="5"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout


                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".225"
                    android:gravity="bottom|right">

                    <com.vincan.rotatecircleimageview.RotateCircleImageView

                        android:id="@+id/imgadd"
                        android:layout_width="50dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginBottom="4dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom"
                        android:src="@drawable/add"
                        app:rciv_border_padding="2dp"
                        app:rciv_border_style="still"
                        app:rciv_border_track_start_color="#3d66fa"
                        app:rciv_border_width="2dp"
                        app:rciv_circle_background_color="#2d2" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".65">

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>